{
	"name": "tricore-lsp",
	"description": "Tricore language server",
	"author": "Xinquan XU",
	"license": "MIT",
	"version": "1.0.0",
	"publisher": "Xinquan XU",
	"repository": {
		"type": "git",
		"url": ""
	},
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onLanguage:Tricore",
		"workspaceContains:**/*.{s,S,asm,ASM}"
	],
	"main": "./client/out/extension",
	"contributes": {
		"breakpoints": [
			{
				"language": "Tricore"
			}
		],
		"languages": [
			{
				"id": "Tricore",
				"aliases": [
					"Tricore Assembly"
				],
				"extensions": [
					".s",
					".S",
					".asm"
				],
				"configuration": "./client/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "Tricore",
				"scopeName": "source.tricore",
				"path": "./client/syntaxes/Tricore Assembly.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "tricore",
			"properties": {
				"Tricore.trace.server": {
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "verbose",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "jest"
	},
	"devDependencies": {
		"@types/jest": "^29.1.2",
		"@types/node": "^16.11.7",
		"@typescript-eslint/eslint-plugin": "^5.30.0",
		"@typescript-eslint/parser": "^5.30.0",
		"eslint": "^8.13.0",
		"typescript": "^4.8.4",
		"jest": "^29.1.2",
    "ts-jest": "^29.0.3",
    "vscode-oniguruma": "^1.6.2"
	}
}
